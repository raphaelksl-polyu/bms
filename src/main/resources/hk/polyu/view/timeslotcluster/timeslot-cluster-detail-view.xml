<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://timeslotClusterDetailView.title"
      focusComponent="form">
    <data>
        <instance id="timeslotClusterDc"
                  class="hk.polyu.entity.TimeslotCluster">
            <fetchPlan extends="_base">
                <property name="event" fetchPlan="_base"/>
                <property name="generatedTimeslot" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="generatedTimeslotDc" property="generatedTimeslot"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="timeslotClusterDc">
            <dateTimePicker id="startDatettimeField" property="startDatetime"/>
            <dateTimePicker id="endDatetimeField" property="endDatetime"/>
            <entityPicker id="eventField" property="event">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="generatedTimeslotDataGrid.create"/>
            <button action="generatedTimeslotDataGrid.edit"/>
            <button action="generatedTimeslotDataGrid.remove"/>
        </hbox>
        <dataGrid id="generatedTimeslotDataGrid" dataContainer="generatedTimeslotDc" width="100%" height="100%">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="startDatetime"/>
                <column property="endDatetime"/>
                <column property="version"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
