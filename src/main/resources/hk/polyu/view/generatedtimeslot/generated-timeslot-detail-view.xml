<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://generatedTimeslotDetailView.title"
      focusComponent="form">
    <data>
        <instance id="generatedTimeslotDc"
                  class="hk.polyu.entity.GeneratedTimeslot">
            <fetchPlan extends="_base">
                <property name="timeslotCluster" fetchPlan="_base">
                    <property name="event" fetchPlan="_base"/>
                </property>
                <property name="timeslotStudentAllocation" fetchPlan="_base">
                    <property name="student" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="generatedTimeslotDc">
            <entityPicker id="timeslotClusterField" property="timeslotCluster">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <dateTimePicker id="startDatetimeField" property="startDatetime"/>
            <dateTimePicker id="endDatetimeField" property="endDatetime"/>
            <entityPicker id="timeslotStudentAllocationField" property="timeslotStudentAllocation">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
