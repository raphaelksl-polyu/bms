<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://timeslotClusterListView.title"
      focusComponent="timeslotClustersDataGrid">
    <data>
        <collection id="timeslotClustersDc"
                    class="hk.polyu.entity.TimeslotCluster">
            <fetchPlan extends="_base">
                <property name="event" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="timeslotClustersDl" readOnly="true">
                <query>
                    <![CDATA[select e from bms_TimeslotCluster e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="timeslotClustersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="timeslotClustersDataGrid.create"/>
            <button id="editBtn" action="timeslotClustersDataGrid.edit"/>
            <button id="removeBtn" action="timeslotClustersDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="timeslotClustersDl"/>
        </hbox>
        <dataGrid id="timeslotClustersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="timeslotClustersDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="startDatetime"/>
                <column property="endDatetime"/>
                <column property="event"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
