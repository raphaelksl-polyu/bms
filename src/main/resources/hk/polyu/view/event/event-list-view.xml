<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://eventListView.title"
      focusComponent="eventsDataGrid">
    <data>
        <collection id="eventsDc"
                    class="hk.polyu.entity.Event">
            <fetchPlan extends="_base">
                <property name="subject" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="eventsDl" readOnly="true">
                <query>
                    <![CDATA[select e from bms_Event e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="eventsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="eventsDataGrid.create"/>
            <button id="editBtn" action="eventsDataGrid.edit"/>
            <button id="removeBtn" action="eventsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="eventsDl"/>
        </hbox>
        <dataGrid id="eventsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="eventsDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="subject"/>
                <column property="name"/>
                <column property="timeslotDuration"/>
                <column property="minimumTimeslotPreferenceDeclarationCount"/>
                <column property="timeslotPreferenceDeclarationDeadline"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
